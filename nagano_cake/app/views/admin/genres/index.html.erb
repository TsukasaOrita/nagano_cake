   <h1>ジャンル一覧画面</h1>
   <%= form_with model: @genre, url: admin_genres_path, local: true do |f| %>
    <%= f.label :name %><br>
    <%= f.text_field :name, placeholder: "ジャンル名" %><br>
    <%= f.submit '新規登録', class: "btn btn-primary" %>
   <% end %>

 <table class="table table-hover table-inverse">
       <thead>
          <tr>
           <th></th>
           <th></th>
           <th></th>
           <th colspan="4"></th>
          </tr>
        </thead>
        <tbody>
        <% @genres.each do |genre| %>
         <tr>
          <td><%= genre.name %></td>
          <td><%= link_to "Edit", edit_admin_genre_path(genre.id),class:"btn btn-success" %></td>
          <td><%= link_to "Destroy", genre_path(genre), method: :delete, "data-confirm" => "Are you sure？", class:"btn btn-danger" %></td>
         </tr>
        <% end %>
        </tbody>
      </table>
