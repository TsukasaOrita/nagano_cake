<div class="container">
 <div class="row">
  <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
   <h1>商品 新規登録画面</h1>
   <%= form_with model:@item, url: admin_items_path, local: true do |f| %>
    <%= f.label :name %><br>
    <%= f.text_field :name, placeholder: "商品名" %><br>
    <%= f.label :genre_id %><br>
    <%= f.collection_select :genre_id, Genre.all, :id, :genre_name %><br>
    <%= f.label :image %><br>
    <%= f.text_field :image, placeholder: "画像" %><br>
    <%= f.label :introduction %><br>
    <%= f.text_area :introduction, placeholder: "紹介文", rows: "10" %><br>
    <%= f.label :price %><br>
    <%= f.number_field :price %><br>
    <%= f.submit '新規登録', class: "btn btn-primary" %>
   <% end %>
  </div>
 </div>
</div>