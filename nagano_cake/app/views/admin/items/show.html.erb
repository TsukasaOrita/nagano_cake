<div class=container>
  <div class=row>
   <h2>商品詳細画面</h2>
   <table class="table">
    <tr>
     <td><%= attachment_image_tag @item, :image, format: 'jpeg', fallback: "no_image.jpg", size: '50x50' %></td>
     <td><%= link_to @item.name, admin_item_path(@item.id) %></td>
     <td><%= @item.name %></td>
     <td><%= link_to "Edit", edit_admin_item_path(@item),class:"btn btn-success" %></td>
     <td><%= link_to "Destroy", admin_item_path(@item), method: :delete, "data-confirm" => "Are you sure?", class:"btn btn-danger" %></td>
    </tr>
   </table>
  </div>
</div>